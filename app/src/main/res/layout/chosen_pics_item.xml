<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="200dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/chosen_pic1"
        android:padding="5dp"
        />
    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="#00e9e6e6"
        android:id="@+id/btn_cancel_action"
        android:src="@drawable/ic_action_cancelpic"
        app:layout_constraintEnd_toEndOf="@+id/chosen_pic1"
        app:layout_constraintTop_toTopOf="@+id/chosen_pic1" />
</android.support.constraint.ConstraintLayout>
