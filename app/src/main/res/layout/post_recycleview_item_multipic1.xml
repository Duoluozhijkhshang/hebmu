<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:id="@+id/post_liner2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/post_icon2"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:visibility="gone"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_topic_hot" />

        <TextView
            android:id="@+id/post_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/post_icon2"
            app:layout_constraintTop_toTopOf="@+id/post_icon2" />
    </LinearLayout>


    <TextView
        android:id="@+id/post_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:maxLines="2"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="@+id/post_liner2"
        app:layout_constraintTop_toBottomOf="@+id/post_liner2" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"


        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_content2">

        <ImageView
            android:id="@+id/post_pic21"
            android:layout_width="110dp"
            android:layout_column="0"
            android:layout_row="0"
            android:scaleType="fitCenter"
            android:layout_rowWeight="1"
            android:src="@drawable/xiaohui"
            android:layout_margin="5dp"></ImageView>

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/post_pic22"
            android:layout_width="110dp"
            android:layout_column="1"
            android:layout_row="0"
            android:scaleType="fitCenter"
            android:layout_rowWeight="1"
            android:src="@drawable/xiaohui" />

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/post_pic23"
            android:layout_width="110dp"
            android:layout_column="2"
            android:layout_row="0"
            android:scaleType="fitCenter"
            android:layout_rowWeight="1"
            android:src="@drawable/xiaohui" />

    </GridLayout>

    <TextView
        android:id="@+id/post_author2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/post_sumcommentnum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:text="999"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="23dp"
        android:layout_height="14dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toStartOf="@+id/post_sumcommentnum2"
        app:layout_constraintTop_toTopOf="@+id/post_sumcommentnum2"
        app:srcCompat="@drawable/psot_comment37" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/post_author2"/>
</android.support.constraint.ConstraintLayout>
